{{> common/header }}
                    
<!-- ---------- -->
                    
                    {{#if msg}}
                        {{{msg}}}
                    {{/if}}
                    <article class="v-article v-article-single">
                        <header class="v-article-header"{{body.img}}>
                            <div class="v-article-header-sub">
                                <h2 class="v-article-title"><a href="{{info.base_url}}article/{{body.aid}}/{{body.title}}">{{body.title}}</a></h2>
                                <div class="row">
                                    <date class="v-article-date" datetime="{{body.posted_machine}}">{{body.posted_human}}</date> 
                                    <div class="v-article-info row">
                                        <div class="col"></div>
                                        <div class="col">
                                            <div class="v-byline"> 
                                                 by 
                                                <a href="{{info.base_url}}author/{{body.userid}}/{{body.username}}" class="v-author-link">{{body.username}}</a>
                                            </div>
                                        </div>
                                        <div class="col v-editlink">
                                        {{#if info.is_admin}}
                                            <a href="{{info.base_url}}edit/{{body.aid}}">Edit <i class="fa fa-pencil" aria-hidden="true"></i></a>
                                        {{/if}}
                                        </div>
                                    </div>
                                    <!-- YYYY-MM-DDThh:mm:ssTZD OR PTDHMS -->
                                </div>
                            </div>
                        </header>
                        <div class="v-article-content">
                            {{{body.body}}}
                            <div class="v-article-tags">
                                {{#each body.tags}}
                                <a href="{{../info.base_url}}tag/{{this}}">{{this}}</a>
                                {{/each}}
                            </div>
                        </div>
                    </article>
                    
<!-- ---------- -->

{{> common/footer }}